{
  "name": "miso-stripe",
  "version": "1.0.0",
  "description": "Stripe-like system for MisoTeam payments",
  "main": "src/server.js",
  "scripts": {
    "start": "node ./src/index.js",
    "dev": "nodemon ./src/index.js",
    "lint": "eslint .",
    "test": "yarn test:unit && yarn test:integration",
    "test:unit": "jest --ci --no-cache --coverage --detectOpenHandles --forceExit src/**",
    "test:integration": "jest --ci --no-cache --detectOpenHandles --forceExit test/**"
  },
  "author": "Miso Team",
  "license": "ISC",
  "dependencies": {
    "@types/joi": "^17.2.3",
    "@types/sequelize": "^4.28.20",
    "@types/supertest": "^6.0.2",
    "body-parser": "^1.20.2",
    "express": "^4.19.2",
    "joi": "^17.13.0",
    "morgan": "^1.10.0",
    "pg": "^8.11.5",
    "pg-hstore": "^2.3.4",
    "sequelize": "^6.37.3",
    "supertest": "^7.0.0"
  },
  "devDependencies": {
    "@ngneat/falso": "^7.2.0",
    "eslint": "^8.0.1",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-plugin-import": "^2.29.1",
    "jest": "^29.7.0",
    "nodemon": "^3.1.3",
    "sqlite3": "^5.1.7"
  },
  "eslintConfig": {
    "extends": [
      "airbnb-base"
    ],
    "env": {
      "node": true,
      "jest": true
    },
    "rules": {
      "brace-style": [
        "error",
        "stroustrup"
      ],
      "comma-dangle": [
        "error",
        "never"
      ],
      "no-unused-vars": [
        "warn"
      ],
      "no-var": [
        "off"
      ],
      "one-var": [
        "off"
      ],
      "no-console": [
        "off"
      ]
    }
  }
}
